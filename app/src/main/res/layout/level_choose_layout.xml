<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="2"
    android:columnOrderPreserved="true"
    android:id="@+id/selectLevelLayout"
    android:measureWithLargestChild="false"
    android:showDividers="beginning|middle|end"
    android:visibility="visible"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    tools:context="com.onettm.ak74.LevelChoiceDialog">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSelectLevel1"
            android:src="@drawable/level1"
            android:scaleType="centerInside"
            android:contentDescription="@string/select_level_1"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSelectLevel2"
            android:src="@drawable/level2"
            android:scaleType="centerInside"
            android:contentDescription="@string/select_level_2"
            android:adjustViewBounds="false" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSelectLevel3"
            android:src="@drawable/level3"
            android:scaleType="fitCenter"
            android:contentDescription="@string/select_level_3"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSelectLevel4"
            android:src="@drawable/level4"
            android:scaleType="fitCenter"
            android:contentDescription="@string/select_level_4"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:focusableInTouchMode="false"
            android:clickable="false" />

    </TableRow>

</TableLayout>